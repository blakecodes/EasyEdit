{
    "name": "Hero Component",
    "selector": "component.html",
    "editor": "editor.html",
    "tools": [{
            "name": "special",
            "tool": "tinymce",
            "special": true
        }, {
            "name": "inline",
            "tool": "inline"
        },
        {
            "name": "erase",
            "tool": "erase"
        },
        {
            "name": "fullscreen",
            "tool": "settings"
        }
    ],
    "version": 1.0,
    "content": "<div class=\"row addContent\" ref-component=\"hours\">\n    <h3>Hours of Operation</h3>\n    <div class=\"row\">\n        <label>Monday - Friday</label>\n        <div class=\"full-width\" data-fill=\"regDays\">\n            8AM - 5PM\n        </div>\n    </div>\n    <div class=\"row\">\n        <label>Saturday</label>\n        <div class=\"full-width\" data-fill=\"saturday\">\n            10AM - 2PM\n        </div>\n    </div>\n    <div class=\"row\">\n        <label>Sunday</label>\n        <div class=\"full-width\" data-fill=\"sunday\">\n            Closed\n        </div>\n    </div>\n</div>",
    "scripts": [
        "/src/app/components/singles/hours/hours.js"
    ],
    "config": [{
            "name": "Image URL",
            "type": "Input",
            "elementType": "image",
            "node": "iURL"
        },
        {
            "name": "Image Sub Text",
            "type": "Input",
            "elementType": "text",
            "node": "iSubText"
        }
    ],
    "alpacaArgs": {
        "schema": {
            "type": "object",
            "properties": {
                "regDays": {
                    "type": "string",
                    "title": "Regular Hours"
                },
                "saturday": {
                    "type": "string",
                    "title": "Saturday Hours"
                },
                "sunday": {
                    "type": "string",
                    "title": "Sunday Hours"
                }
            }
        },
        "view": "bootstrap-edit"
    }
}