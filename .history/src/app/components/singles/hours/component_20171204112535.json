{
    "name": "Hero Component",
    "selector": "component.html",
    "editor": "editor.html",
    "tools": [{
            "name": "special",
            "tool": "tinymce",
            "special": true
        }, {
            "name": "inline",
            "tool": "inline"
        },
        {
            "name": "erase",
            "tool": "erase"
        },
        {
            "name": "fullscreen",
            "tool": "settings"
        }
    ],
    "version": 1.0,
    "content": "<div class=\"row addContent\" ref-component=\"hours\">\n    hours of operation\n</div>",
    "scripts": [
        "/src/app/components/singles/hours/hours.js"
    ],
    "config": [{
            "name": "Image URL",
            "type": "Input",
            "elementType": "image",
            "node": "iURL"
        },
        {
            "name": "Image Sub Text",
            "type": "Input",
            "elementType": "text",
            "node": "iSubText"
        }
    ],
    "alpacaArgs": {
        "schema": {
            "title": "What do you think of Alpaca?",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Name"
                },
                "ranking": {
                    "type": "string",
                    "title": "Rankings",
                    "enum": ["excellent", "not too shabby", "alpaca built my hotrod"]
                }
            }
        },
        "options": {
            "fields": {
                "name": {
                    "fieldClass": "col-md-6",
                    "type": "text",
                    "label": "Name:"
                },
                "email": {
                    "fieldClass": "col-md-6",
                    "type": "email",
                    "label": "Email Address:"
                },
                "organization": {
                    "fieldClass": "col-md-12",
                    "type": "text",
                    "label": "Organization:"
                },
                "workPhone": {
                    "fieldClass": "col-md-12",
                    "type": "phone",
                    "label": "Work phone:"
                },
            },
        },
        "view": "bootstrap-edit"
    }
}