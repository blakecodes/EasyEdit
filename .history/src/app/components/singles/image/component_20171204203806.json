{
    "name": "HTML Component",
    "selector": "component.html",
    "editor": "editor.html",
    "tools": [{
            "name": "inline",
            "tool": "inline"
        },
        {
            "name": "erase",
            "tool": "erase"
        },
        {
            "name": "fullscreen",
            "tool": "settings"
        }
    ],
    "specialEditor": "editor.special.tinymce",
    "version": 1.0,
    "content": "<div ref-component=\"image\">\n    <img src=\"/src/assets/images/clean-office.jpg\" class=\"img-responsive img-component\" ref-retrieve=\"iURL\" />\n    <span class=\"image-sub-text\" ref-retrieve=\"iSubText\">Small caption for the above image</span>\n</div>",
    "config": [{
            "name": "Image URL",
            "type": "Input",
            "elementType": "image",
            "node": "iURL"
        },
        {
            "name": "Image Sub Text",
            "type": "Input",
            "elementType": "text",
            "node": "iSubText"
        }
    ],
    "alpacaArgs": {
        "schema": {
            "type": "object",
            "properties": {
                "imgSrc": {
                    "type": "string",
                    "title": "Image URL"
                }
            }
        },
        "view": "bootstrap-edit"
    }
}